{
  "name": "@agent-os/copilot-extension",
  "version": "1.0.0",
  "description": "Agent OS Safety Layer for GitHub Copilot - Kernel-level safety verification for AI code suggestions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/imran-siddique/agent-os"
  },
  "keywords": [
    "github",
    "copilot",
    "extension",
    "safety",
    "ai",
    "code-review",
    "security",
    "agent-os"
  ],
  "author": "Agent OS Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@octokit/webhooks": "^13.0.0",
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0"
  },
  "copilotExtension": {
    "name": "agent-os-safety",
    "displayName": "Agent OS Safety Layer",
    "description": "Kernel-level safety verification for GitHub Copilot suggestions",
    "publisher": "agent-os",
    "version": "1.0.0",
    "capabilities": {
      "filter": true,
      "chat": true,
      "actions": true
    },
    "permissions": [
      "copilot:suggestions:filter",
      "copilot:suggestions:annotate",
      "copilot:chat:respond",
      "copilot:context:read"
    ],
    "chatCommands": [
      {
        "name": "review",
        "description": "Review code for safety issues using CMVK multi-model verification"
      },
      {
        "name": "policy",
        "description": "Show or configure safety policies"
      },
      {
        "name": "audit",
        "description": "Show recent safety audit log"
      }
    ],
    "icon": "images/icon.png",
    "categories": [
      "Security",
      "Code Quality",
      "AI Safety"
    ]
  }
}
